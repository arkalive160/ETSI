<p id="notice"><%= notice %></p>

<h1>Estudiantes</h1>

<table>
  <thead>
    <tr>
      <th>Numero identificacion</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Genero</th>
      <th>Edad</th>
      <th>Fecha nacimiento</th>
      <th>Grupo etnico</th>
      <th>Nivel escolaridad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estudiantes.each do |estudiante| %>
      <tr>
        <td><%= estudiante.numero_identificacion %></td>
        <td><%= estudiante.nombre %></td>
        <td><%= estudiante.apellido %></td>
        <td><%= estudiante.genero %></td>
        <td><%= estudiante.edad %></td>
        <td><%= estudiante.fecha_nacimiento %></td>
        <td><%= estudiante.grupo_etnico %></td>
        <td><%= estudiante.nivel_escolaridad %></td>
        <td><%= link_to 'Show', estudiante %></td>
        <td><%= link_to 'Edit', edit_estudiante_path(estudiante) %></td>
        <td><%= link_to 'Destroy', estudiante, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

