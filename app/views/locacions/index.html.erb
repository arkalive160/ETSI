<p id="notice"><%= notice %></p>

<h1>Locacions</h1>

<table>
  <thead>
    <tr>
      <th>Pais</th>
      <th>Ciudad</th>
      <th>Direccion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locacions.each do |locacion| %>
      <tr>
        <td><%= locacion.pais %></td>
        <td><%= locacion.ciudad %></td>
        <td><%= locacion.direccion %></td>
        <td><%= link_to 'Show', locacion %></td>
        <td><%= link_to 'Edit', edit_locacion_path(locacion) %></td>
        <td><%= link_to 'Destroy', locacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Locacion', new_locacion_path %>
